{
  "nodes": [
    {
      "parameters": {
        "path": "<YOUR_WEBHOOK_PATH>"
      },
      "type": "@n8n/n8n-nodes-langchain.mcpTrigger",
      "typeVersion": 2,
      "position": [-60, -120],
      "id": "trigger-1",
      "name": "MCP Server Trigger",
      "webhookId": "<YOUR_WEBHOOK_ID>"
    },
    {
      "parameters": {
        "driveId": { "__rl": true, "mode": "list", "value": "My Drive" },
        "folderId": { "__rl": true, "mode": "list", "value": "root", "cachedResultName": "/ (Root folder)" },
        "options": {}
      },
      "type": "n8n-nodes-base.googleDriveTool",
      "typeVersion": 3,
      "position": [20, 100],
      "id": "drive-upload",
      "name": "Upload file in Google Drive",
      "credentials": {
        "googleDriveOAuth2Api": {
          "name": "<YOUR_GOOGLE_DRIVE_CREDENTIAL>"
        }
      }
    },
    {
      "parameters": {
        "sendTo": "={{ $fromAI('To', ``, 'string') }}",
        "subject": "={{ $fromAI('Subject', ``, 'string') }}",
        "message": "={{ $fromAI('Message', ``, 'string') }}",
        "options": {}
      },
      "type": "n8n-nodes-base.gmailTool",
      "typeVersion": 2.1,
      "position": [200, 100],
      "id": "gmail-send",
      "name": "Send a message in Gmail",
      "webhookId": "<YOUR_WEBHOOK_ID>",
      "credentials": {
        "gmailOAuth2": {
          "name": "<YOUR_GMAIL_CREDENTIAL>"
        }
      }
    },
    {
      "parameters": {
        "operation": "getAll",
        "filters": {}
      },
      "type": "n8n-nodes-base.gmailTool",
      "typeVersion": 2.1,
      "position": [360, 100],
      "id": "gmail-read",
      "name": "Get many messages in Gmail",
      "webhookId": "<YOUR_WEBHOOK_ID>",
      "credentials": {
        "gmailOAuth2": {
          "name": "<YOUR_GMAIL_CREDENTIAL>"
        }
      }
    },
    {
      "parameters": {
        "options": {}
      },
      "type": "@n8n/n8n-nodes-langchain.chatTrigger",
      "typeVersion": 1.1,
      "position": [-180, -60],
      "id": "chat-trigger",
      "name": "When chat message received",
      "webhookId": "<YOUR_WEBHOOK_ID>"
    },
    {
      "parameters": {
        "options": {}
      },
      "type": "@n8n/n8n-nodes-langchain.agent",
      "typeVersion": 2,
      "position": [40, -60],
      "id": "agent",
      "name": "AI Agent"
    },
    {
      "parameters": {
        "options": {}
      },
      "type": "@n8n/n8n-nodes-langchain.lmChatGoogleGemini",
      "typeVersion": 1,
      "position": [-20, 160],
      "id": "gemini-model",
      "name": "Google Gemini Chat Model",
      "credentials": {
        "googlePalmApi": {
          "name": "<YOUR_GEMINI_CREDENTIAL>"
        }
      }
    },
    {
      "parameters": {},
      "type": "@n8n/n8n-nodes-langchain.memoryBufferWindow",
      "typeVersion": 1.3,
      "position": [120, 160],
      "id": "memory",
      "name": "Simple Memory"
    },
    {
      "parameters": {
        "sseEndpoint": "http://<YOUR_SERVER>:5678/mcp/<WEBHOOK_ID>"
      },
      "type": "@n8n/n8n-nodes-langchain.mcpClientTool",
      "typeVersion": 1,
      "position": [300, 160],
      "id": "mcp-client",
      "name": "MCP Client"
    }
  ],
  "connections": {
    "Upload file in Google Drive": {
      "ai_tool": [[{ "node": "MCP Server Trigger", "type": "ai_tool", "index": 0 }]]
    },
    "Send a message in Gmail": {
      "ai_tool": [[{ "node": "MCP Server Trigger", "type": "ai_tool", "index": 0 }]]
    },
    "Get many messages in Gmail": {
      "ai_tool": [[{ "node": "MCP Server Trigger", "type": "ai_tool", "index": 0 }]]
    },
    "When chat message received": {
      "main": [[{ "node": "AI Agent", "type": "main", "index": 0 }]]
    },
    "Google Gemini Chat Model": {
      "ai_languageModel": [[{ "node": "AI Agent", "type": "ai_languageModel", "index": 0 }]]
    },
    "Simple Memory": {
      "ai_memory": [[{ "node": "AI Agent", "type": "ai_memory", "index": 0 }]]
    },
    "MCP Client": {
      "ai_tool": [[{ "node": "AI Agent", "type": "ai_tool", "index": 0 }]]
    }
  },
  "pinData": {},
  "meta": {
    "templateCredsSetupCompleted": true,
    "instanceId": "<YOUR_INSTANCE_ID>"
  }
}
